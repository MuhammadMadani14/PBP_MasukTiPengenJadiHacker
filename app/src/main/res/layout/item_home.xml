<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvHome"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/sea_serpent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/setTeamHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Persija C.F"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/setTanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04/03/2023 VS Persib C.F"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/setTeamHome"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvSquadlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Squadlist"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/setTanggal"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/setSquadlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Andritany, Riko, Kudela, Firza, Kremencik, Dony, Abimanyu, Fandi, Cahya Supriadi, Ryo Matsumura"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="3"
                    app:layout_constraintTop_toBottomOf="@id/tvSquadlist"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvStatistik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Statistik"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/setSquadlist"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/setStatistik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Riko Simanjuntak 8 Gol, Kremencik 10 Goal, Abimanyu 4 Assist"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="3"
                    app:layout_constraintTop_toBottomOf="@id/tvStatistik"
                    app:layout_constraintStart_toStartOf="parent"/>
                
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivItem"
                    android:layout_width="302dp"
                    android:layout_height="302dp"
                    android:src="@drawable/bg_item"
                    android:layout_marginTop="8dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/setStatistik"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>